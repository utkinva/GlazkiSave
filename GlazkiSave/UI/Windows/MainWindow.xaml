<Window x:Class="GlazkiSave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlazkiSave"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1100" Icon="/UI/Logo/Глазки-save.ico" MinWidth="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="#FFE9F9" Grid.Row="0"/>
        <Image Source="../Logo/Глазки-save.png" HorizontalAlignment="Left" VerticalAlignment="Center"
               Margin="5"/>
        <TextBlock Text="Глазки-Save" HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontFamily="Century Gothic" FontSize="40"/>
        <Frame NavigationUIVisibility="Hidden" x:Name="MainFrm" Grid.Row="1"/>
    </Grid>
</Window>
